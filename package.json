{
  "name": "praktikum",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint \"src/**/*.scss\" --fix",
    "prettier": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "prettier:fix": "prettier --write src",
    "lint:ts": "tsc --noEmit",
    "test": "mocha"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "chai": "^5.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "mocha": "^11.1.0",
    "prettier": "^3.3.3",
    "sass": "^1.80.6",
    "sinon": "^19.0.2",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.10.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.10"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run lint:ts"
    }
  }
}
